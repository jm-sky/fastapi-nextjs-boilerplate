# Frontend Environment Configuration

# Development server port
PORT=3000
NEXT_PUBLIC_PORT=3000

# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8000

# API timeouts and retry configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=1
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Authentication redirect URLs
NEXT_PUBLIC_LOGIN_REDIRECT=/dashboard
NEXT_PUBLIC_LOGOUT_REDIRECT=/login
NEXT_PUBLIC_UNAUTHORIZED_REDIRECT=/login
NEXT_PUBLIC_REGISTER_REDIRECT=/dashboard

# Google reCAPTCHA v3
# Get site key from https://www.google.com/recaptcha/admin/create
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key