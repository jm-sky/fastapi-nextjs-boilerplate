# Application Settings
APP_NAME=SaaS Boilerplate API
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=127.0.0.1
PORT=8000

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32

# Database
# SQLite (for local development without Docker):
# DATABASE_URL=sqlite:///./app.db
# PostgreSQL (recommended with Docker Compose):
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/saas_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# Google reCAPTCHA v3
# Get keys from https://www.google.com/recaptcha/admin/create
RECAPTCHA_ENABLED=false
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_MIN_SCORE=0.5

# Google OAuth
# Get credentials from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback